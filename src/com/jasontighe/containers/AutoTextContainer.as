package com.jasontighe.containers {	import com.jordan.cp.model.dto.CopyDTO;	import com.plode.framework.containers.TextContainer;	import flash.display.Sprite;	public class AutoTextContainer 	extends Sprite 	{		//----------------------------------------------------------------------------		// public static constants		//----------------------------------------------------------------------------				//----------------------------------------------------------------------------		// private variables		//----------------------------------------------------------------------------				//----------------------------------------------------------------------------		// public variables		//----------------------------------------------------------------------------		public var _tc								 : TextContainer;				//----------------------------------------------------------------------------		// constructor		//----------------------------------------------------------------------------		public function AutoTextContainer ( )		{			super( );		}		public function populate( dto : CopyDTO, 								 style : String, 								 wrap : Boolean = false,								 forceWidth : Boolean = false,								 thick : Number = 0,								 sharp : Number = 0,								 asBmp : Boolean = false,								 border : Boolean = false ) : void		{			var dto : CopyDTO = dto;			var s : String = dto.copy;			var xPos : int = dto.copyX;			var yPos : int = dto.copyY;						tc.populate( s, style, wrap, forceWidth, thick, sharp, asBmp, border );			x = xPos;			y = yPos;			addChild( tc );		}				public function setWidth( n : uint ) : void		{			 tc.tf.width = n;		}				public function update(s : String ) : void		{			tc.update( s );		}						//----------------------------------------------------------------------------		// getters/setters		//----------------------------------------------------------------------------		public function get tc() : TextContainer		{			if(!_tc)			{				_tc = new TextContainer();				addChild(_tc);			}			return _tc;		}				}}